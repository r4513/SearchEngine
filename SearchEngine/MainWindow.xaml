<Window x:Class="SearchEngine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SearchEngine"
        mc:Ignorable="d"
        Title="SearchEngine" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="searchBox" HorizontalAlignment="Left" Height="23" Margin="81,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="346"/>
        <Label x:Name="label" Content="Search for:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="searchButton" Content="Go!" HorizontalAlignment="Left" Margin="432,14,0,0" VerticalAlignment="Top" Width="75" Height="22" Click="onSearchButtonClicked"/>
        <ListView x:Name="articleView" HorizontalAlignment="Left" Height="267" Margin="10,42,0,0" VerticalAlignment="Top" Width="417">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="readButton" Content="Read" HorizontalAlignment="Left" Margin="432,42,0,0" VerticalAlignment="Top" Width="75" Click="onReadButtonClicked"/>

    </Grid>
</Window>
